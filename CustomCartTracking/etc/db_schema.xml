<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="custom_cart_tracking">
        <column xsi:type="smallint" name="id" padding="11" unsigned="true" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="text" name="sku" nullable="false" comment="SKU"/>
        <column xsi:type="int" name="customer_id" padding="10" unsigned="true" nullable="true" comment="Customer ID or null for Guest"/>
        <column xsi:type="int" name="quote_id" padding="10" unsigned="true" nullable="true" comment="Quote ID"/>
        <column xsi:type="timestamp" name="created" nullable="false" default="CURRENT_TIMESTAMP" on_update="false" comment="Creation Date"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>

